generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PSQL_URL")
}

enum UrgencyLevel {
  ONE
  TWO
  THREE
  FOUR
  FIVE
}

enum ItemType {
  CABINET
  CONECTORS
  KEYBOARD
  MOBILES
  MONITOR
  MOUSE
  NOTEBOOKS
  PRINTER
  RECYCLESERVICES
  SACANNER
  SUPORTSERVICES
  TABLETS
}

enum ConditionType {
  NEW
  GOOD
  FAIR
  POOR
  BROKEN
}

enum Badges {
  FIRST_DONATION
  TECH_SAVIOR
  ECO_HERO
  EDUCATION_ALLY
}

model School {
  id                 Int          @id @default(autoincrement())
  name               String
  street             String
  number             String
  postalCode         String
  neighbourhood      String
  unprivilegedArea   Boolean
  urgency            UrgencyLevel
  quantityOfStudents Int
  availability       String // Example: "Mon-Fri 08:00-12:00"
  Item               Item[]
  phone              String?
  email              String @unique
  password           String
}

model Donor {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  site     String?
  name     String?
  document String  @unique
  mobile   String
  Item     Item[]
  Badges   Badges[]
}

model Item {
  id        Int           @id @default(autoincrement())
  item      ItemType
  name      String
  condition ConditionType
  donor     Donor        @relation(fields: [donorId], references: [id])
  donorId   Int
  school    School       @relation(fields: [schoolId], references: [id])
  schoolId  Int
}
